/* miniprogram/pages/status/status.wxss */
.separator{
    width: 100%;
    height: 8rpx;
    background: #f0f0f0;
}

.top-container{
    overflow: hidden;
    margin-top: 50rpx;
    padding-bottom: 40rpx;
    width: 100%;
}

.top-total-num-text{
    display: block;
    text-align: center;
    color: rgb(38, 206, 184);
    font-size: 60rpx;
    font-weight: bolder;
}

.top-total-num-guide-text{
    display: block;
    text-align: center;
    color: #acacac;
    font-size: 30rpx;
}

.top-trisection-container{
    margin-top: 50rpx;
}

.top-trisection{
    overflow: hidden;
    width: 33.3%;
    float: left;
    text-align: center;
}

.top-trisection-top-text{
    color: #4b4b4b;
    font-size: 40rpx;
    font-weight: bold;
    display: block;
}

.top-trisection-bottom-text{
    display: block;
    color: #acacac;
    font-size: 25rpx;
    margin-top: 5rpx;
}

.canvas-container{

}

.canvas-guide-container{
    overflow: hidden;
    width: 90%;
    margin: auto;
    margin-top: 30rpx;
}

.canvas-guide-left{
    padding-left: 10rpx;
    float: left;
    border-left: solid;
    font-size: 30rpx;
    color: #acacac;
}

.canvas-guide-right{
    padding-right: 10rpx;
    margin-left: 20rpx;
    float: right;
    border-right: solid;
    border-color: rgb(168, 223, 168);
    border-width: 40rpx;
    font-size: 30rpx;
    /* color: #acacac; */
}

canvas{
    width: 90%;
    margin: auto;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    height: 400rpx;
    /* background: rgb(255, 224, 224); */
}